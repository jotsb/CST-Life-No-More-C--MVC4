<div id="slider">
    <div id="slideshow">
        <ul>
            <li>
                <img src="@Url.Content("~/Images/SliderImages/image4.jpg")" alt="" />
            </li>
            <li>
                <img src="@Url.Content("~/Images/SliderImages/image2.jpg")" alt="" />
            </li>
